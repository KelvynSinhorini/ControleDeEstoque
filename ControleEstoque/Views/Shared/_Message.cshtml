@if(TempData.ContainsKey("message"))
{
   var message = Message.Deserialize(TempData["message"].ToString());
   @if(message.Type == MessageType.Error)
   {
       <div class="alert alert-warning mt-3alert-dismissible fade show" role="alert">
           @message.Text
           <button type="button"class="btn-close"data-bs-dismiss="alert"></button>
       </div>
   }
   else
   {
       <div class="alert alert-success mt-3alert-dismissible fade show" role="alert">
           @message.Text
           <button type="button"class="btn-close"data-bs-dismiss="alert"></button>
       </div>
   }   
}